<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="'$(Platform)' == 'x86' or '$(Platform)' == 'x64' or '$(Platform)' == 'AnyCPU'">
      <ItemGroup>
       <Reference Include="ChromiumFX">
            <HintPath>$(MSBuildThisFileDirectory)..\ChromiumFX\$(Platform)\ChromiumFX.dll</HintPath>
            <Private>True</Private>
        </Reference>
        <Reference Include="ChromiumWebBrowser">
            <HintPath>$(MSBuildThisFileDirectory)..\ChromiumFX\$(Platform)\ChromiumWebBrowser.dll</HintPath>
            <Private>True</Private>
        </Reference>
      </ItemGroup>
    </When>
  </Choose>
</Project>