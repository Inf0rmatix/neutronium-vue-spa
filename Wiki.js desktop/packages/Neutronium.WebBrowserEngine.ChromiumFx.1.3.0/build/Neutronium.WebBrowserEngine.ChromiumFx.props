<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="'$(Platform)' == 'x86' or '$(Platform)' == 'x64' or '$(Platform)' == 'AnyCPU'">
      <ItemGroup>   
        <Reference Include="ChromiumFXRenderProcess.exe">
            <HintPath>$(MSBuildThisFileDirectory)..\Neutronium.WebBrowserEngine.ChromiumFx\$(Platform)\ChromiumFXRenderProcess.exe</HintPath>
            <Private>True</Private>
        </Reference>
        <Reference Include="Neutronium.WebBrowserEngine.ChromiumFx">
            <HintPath>$(MSBuildThisFileDirectory)..\Neutronium.WebBrowserEngine.ChromiumFx\$(Platform)\Neutronium.WebBrowserEngine.ChromiumFx.dll</HintPath>
            <Private>True</Private>
        </Reference>
      </ItemGroup>
    </When>
  </Choose>
</Project>